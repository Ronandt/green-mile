<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Temp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Temp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
        integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body class="d-flex h-100">

    @* NAVBAR SOURCE *@
    @* https://getbootstrap.com/docs/5.0/examples/sidebars/ *@
    <div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 280px;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
            <span class="fs-4">Backend</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                @if (Context.Request.Path.StartsWithSegments("/Admin/Index") || Context.Request.Path.Equals("/Admin"))
                {
                    <a asp-page="/Admin/Index" class="nav-link active" aria-current="page">
                        Home
                    </a>
                }
                else
                {
                    <a asp-page="/Admin/Index" class="nav-link" aria-current="page">
                        Home
                    </a>
                }
            </li>
            <li>
                @if (Context.Request.Path.StartsWithSegments("/Admin/Offers"))
                {
                    <a asp-page="/Admin/Offers" class="nav-link active" aria-current="page">
                        Offers
                    </a>
                }
                else
                {
                    <a asp-page="/Admin/Offers" class="nav-link" aria-current="page">
                        Offers
                    </a>
                }

            </li>
            <li>
                @if (Context.Request.Path.StartsWithSegments("/Admin/Users"))
                {
                    <a asp-page="/Admin/Users" class="nav-link active" aria-current="page">
                        Users
                    </a>
                }
                else
                {
                    <a asp-page="/Admin/Users" class="nav-link" aria-current="page">
                        Users
                    </a>
                }
            </li>
            @* ADMIN BLOGS *@
            @* <li>
            <a asp-page="/Admin/Blogs" class="nav-link link-dark">
            Blogs
            </a>
            </li> *@
        </ul>
        <hr>
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle"
                id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="https://github.com/mdo.png" alt="" class="rounded-circle me-2" width="32" height="32">
                <strong>mdo</strong>
            </a>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2">
                @* <li><a class="dropdown-item" href="#">Settings</a></li>
                <li><a class="dropdown-item" href="#">Profile</a></li> *@
                @* <li>
                <hr class="dropdown-divider">
                </li> *@
                <li><a class="dropdown-item" asp-page="/Logout">Logout</a></li>
            </ul>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>