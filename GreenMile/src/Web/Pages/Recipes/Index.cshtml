                    <div class="shop-product-fillter">
                        <div class="totall-product">
							@{
								int counter;
								counter = Model.RecipeList.Count();
										@if(counter==0)
								{
											<p>No recipes found.</p>
								}
								else if(counter==1)
								{
											<p>We found <strong class="text-brand">@counter</strong> recipe for you!</p>
								}
								else{
											<p>We found <strong class="text-brand">@counter</strong> recipes for you!</p>
								}
								
							}
                           
                        </div>
                        <div class="sort-by-product-area">
                            <div class="sort-by-cover mr-10">
                               
                            </div>
                            <div class="sort-by-cover">
                                <div class="sort-by-product-wrap">
                                    <div class="sort-by">
                                        <span><i class="fi-rs-apps-sort"></i>Sort by:</span>
                                    </div>
                                    <div class="sort-by-dropdown-wrap">
                                        <span> Featured <i class="fi-rs-angle-small-down"></i></span>
                                    </div>
                                </div>
                                <div class="sort-by-dropdown">
                                    <ul>
                                        <li><a class="active" href="#">Featured</a></li>
                                        <li><a href="#">Duration: Low to High</a></li>
                                        <li><a href="#">Duration: High to Low</a></li>
                                        <li><a href="#">Difficulty</a></li>
                                        <li><a href="#">Avg. Rating</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row product-grid">
						@{
									@foreach(var item in Model.RecipeList)
							{
								//decimal rating;
								//rating = item.difficulty * 20;
										<!--start recipe card-->
										<div class="col-lg-1-5 col-md-4 col-12 col-sm-6">
											<div class="product-cart-wrap mb-30">
												<div class="product-img-action-wrap">
													<div class="product-img product-img-zoom">
								<a asp-page="Details" asp-route-id="@item.Id">
											<img class="default-img" src="@(string.IsNullOrEmpty(@item.imageFilePath) ?"/uploads/null.png" : item.imageFilePath)" alt="" style="height:300px;width:300px;object-fit:cover" />
														</a>
													</div>

												</div>
												<div class="product-content-wrap">

							<h2 class="spacing"><a class="spacing" asp-page="Details" asp-route-id="@item.Id">@item.recipeName</a></h2>
													@*<div class="product-rate-cover">
												<div class="product-rate d-inline-block">
													<div class="product-rating" style="width: @rating%"></div>
												</div>
												<span class="font-small ml-5 text-muted"> (@item.difficulty)</span>
											</div>*@
													<div>
													@{
																@if (item.difficulty=="Easy")
												{
																	<p>Difficulty: <font color="green">@item.difficulty</font></p>
												}
												else if(item.difficulty=="Intermediate")
												{
																	<p>Difficulty: <font color="orange	">@item.difficulty</font></p>
												}
												else if(item.difficulty=="Hard")
												{
																	<p>Difficulty: <font color="red">@item.difficulty</font></p>
												}
													}
														

													</div>


													<div class="product-card-bottom">
														<div class="product-price">
															<span>Duration: @item.duration mins</span>

														</div>
														
													</div>
												</div>
											</div>
										</div>
										<!--end recipe card-->
							}
						}
						
						
                    </div>

</body>

